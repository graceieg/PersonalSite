---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <h2 class="site-name pixel-heading">
      <a href="/">Grace Giebel</a>
    </h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="#portfolio">Projects</HeaderLink>
      <HeaderLink href="#dreaming-big">About</HeaderLink>
      <HeaderLink href="#hang-with-me">Connect</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.8rem 2rem;
  }
  
  .site-name {
    margin: 0;
    font-size: 1.25rem;
  }
  
  .site-name a {
    text-decoration: none;
    color: #8a63d2;
    transition: color 0.2s ease;
    letter-spacing: 1px;
  }
  
  .site-name a:hover {
    color: #663ab2;
    text-decoration: none;
  }
  
  .internal-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .internal-links a {
    color: #4a4a4a;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.2s ease;
    position: relative;
  }
  
  .internal-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #8a63d2;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .internal-links a:hover::after,
  .internal-links a.active::after {
    transform: scaleX(1);
  }
  
  .internal-links a:hover,
  .internal-links a.active {
    color: #8a63d2;
  }
  
  @media (max-width: 720px) {
    nav {
      padding: 0.8rem 1rem;
    }
    
    .internal-links {
      gap: 1rem;
    }
    
    .site-name {
      font-size: 1.1rem;
    }
  }
</style>